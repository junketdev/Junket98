<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/light_grey"
  android:orientation="vertical">

  <EditText
    android:id="@+id/edt_search"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:padding="16dp"
    android:hint="Search for your city"
    android:drawableStart="@drawable/ic_search_black_24dp"
    android:drawablePadding="16dp"
    android:background="@color/white"/>

  <LinearLayout
    android:id="@+id/linear_detectmylocation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:background="@color/white"
    android:layout_gravity="center">

    <TextView
      android:id="@+id/txt_detectmylocation"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Detect my location"
      android:background="@color/white"
      android:drawableStart="@drawable/ic_my_location_black_24dp"
      android:drawablePadding="16dp"/>
  </LinearLayout>

  <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:background="@color/divider"/>

  <LinearLayout
    android:id="@+id/linear_myinterest"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:background="@color/white"
    android:layout_gravity="center">

    <TextView
      android:id="@+id/txt_myinterest"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="My interest"
      android:background="@color/white"
      android:drawableStart="@drawable/ic_perm_identity_black_24dp"
      android:drawablePadding="16dp"/>
  </LinearLayout>

  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textAllCaps="true"
    android:text="Other cities"
    android:layout_marginTop="16dp"
    android:layout_marginStart="8dp"/>

  <ListView
    android:id="@+id/list_city"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:background="@color/white"
    tools:listitem="@android:layout/simple_list_item_1"/>

</LinearLayout>